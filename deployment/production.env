# ProjectPulse V1 Production Environment Configuration
# Copy this file to .env in the project root before deployment

# Application Configuration
NODE_ENV=production
PORT=7000
APP_NAME=projectpulse
APP_DOMAIN=pm.mod.gov.qa

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/projectpulse
DB_HOST=localhost
DB_PORT=5432
DB_NAME=projectpulse
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production
BCRYPT_ROUNDS=12

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@pm.mod.gov.qa

# LDAP Configuration (optional)
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_CREDENTIALS=admin-password
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/pm.mod.gov.qa.crt
SSL_KEY_PATH=/etc/nginx/ssl/pm.mod.gov.qa.key

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/projectpulse

# Admin Configuration
ADMIN_USER=admin
ADMIN_PASSWORD=Admin@123!
ADMIN_EMAIL=admin@pm.mod.gov.qa

# Performance Configuration
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=65000
BODY_PARSER_LIMIT=50mb

# Backup Configuration
BACKUP_DIR=/opt/backups/projectpulse
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true 